<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_green">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name_of_the_dish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Введите название блюда"
            style="@style/EditTextRecipesActivity">
        </EditText>

        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Категория"
            style="@style/EditTextRecipesActivity">
        </EditText>

        <EditText
            android:id="@+id/total_cooking_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Общее время приготовления"
            style="@style/EditTextRecipesActivity">
        </EditText>

        <EditText
            android:id="@+id/number_of_servings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Количество порций"
            style="@style/EditTextRecipesActivity">
        </EditText>

        <EditText
            android:id="@+id/ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ингридиенты"
            style="@style/EditTextRecipesActivity">
        </EditText>

        <EditText
            android:id="@+id/cooking_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Способ приготовления"
            style="@style/EditTextRecipesActivity">
        </EditText>

        <EditText
            android:id="@+id/the_nutritional_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пищевая ценность"
            style="@style/EditTextRecipesActivity">
        </EditText>

        <EditText
            android:id="@+id/recipe_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Источник рецепта"
            style="@style/EditTextRecipesActivity">
        </EditText>

    </LinearLayout>
</LinearLayout>